<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/item_exoplayer_background"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:padding="4dp">

    <ImageView
        android:id="@+id/iv_favorite_thumb"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@android:color/black" />

    <TextView
        android:id="@+id/tv_favorite_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_favorite_thumb"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="4dp"
        android:text=" Microsoft đang đàm phán mua TikTok ."
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_favorite_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_favorite_title"
        android:layout_toRightOf="@+id/iv_favorite_thumb"
        android:drawableLeft="@drawable/ic_schedule_black_24dp"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:padding="4dp"
        android:text="0:26:12"
        android:textColor="@android:color/black" />

    <CheckBox
        android:id="@+id/cb_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>